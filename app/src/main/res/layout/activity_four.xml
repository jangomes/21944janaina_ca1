<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FourthActivity"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="end"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/black"
        >

        <Button
            android:id="@+id/ed_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/ic_small_puzzle_svgrepo_com"
            android:backgroundTint="@color/black"
            android:drawableTint="@color/white"
            tools:ignore="SpeakableTextPresentCheck"
            />

        <TextView
            android:id="@+id/home_textView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:text="@string/hobbies" />


        <Button
            android:id="@+id/closebutton"
            android:layout_width="94dp"
            android:layout_height="50dp"
            android:layout_marginStart="150dp"
            android:backgroundTint="@color/black"
            android:drawableTop="@drawable/ic_actions_close_svgrepo_com"
            android:drawableTint="@color/white"
            android:shadowColor="@color/white"
            app:iconTint="@color/white"
            tools:ignore="SpeakableTextPresentCheck" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:gravity="center"

        >


        <Button
            android:id="@+id/education_Button4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:drawableTop="@drawable/ic_graduation_svgrepo_com"
            android:backgroundTint="@color/white"
            tools:ignore="SpeakableTextPresentCheck"
            style="?android:attr/buttonBarButtonStyle"
            />


        <Button
            android:id="@+id/skill_Button4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="5dp"
            android:drawableTop="@drawable/ic_settings_svgrepo_com"
            android:backgroundTint="@color/white"
            tools:ignore="SpeakableTextPresentCheck"
            style="?android:attr/buttonBarButtonStyle"/>

        <Button
            android:id="@+id/hobbies_Button4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="5dp"
            android:drawableTop="@drawable/ic_puzzle_svgrepo_com"
            android:backgroundTint="@color/white"
            tools:ignore="SpeakableTextPresentCheck"
            style="?android:attr/buttonBarButtonStyle"
            />

        <Button
            android:id="@+id/achi_Button4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="5dp"
            android:drawableTop="@drawable/ic_badge_svgrepo_com"
            android:backgroundTint="@color/white"
            tools:ignore="SpeakableTextPresentCheck"
            style="?android:attr/buttonBarButtonStyle"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"

        >
        <View
            android:id="@+id/up_divider4"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="?android:attr/listDivider" />


    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:padding="10dp"
        android:orientation="vertical"
        android:contentDescription="@string/app_name"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp " >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/hobbie_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="25sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@color/black"
                android:text="@string/hobbies" />

            <TextView
                android:id="@+id/read_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="160dp"
                android:layout_marginTop="50dp"
                android:text="@string/read"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/read_textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="160dp"
                android:layout_marginTop="80dp"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:text="@string/read1" />

            <ImageView
                android:id="@+id/book_ImageView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="50dp"
                android:contentDescription="@string/photo"
                app:srcCompat="@drawable/ic_read_news_learn_understand_paper_svgrepo_com"
                tools:ignore="ImageContrastCheck" />


            <TextView
                android:id="@+id/movie_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="160dp"
                android:layout_marginTop="195dp"
                android:text="@string/movie"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/movie1_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="160dp"
                android:layout_marginTop="220dp"
                android:text="@string/movie1"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/movie_ImageView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="200dp"
                android:layout_marginStart="10dp"
                android:contentDescription="@string/photo"
                app:srcCompat="@drawable/ic_movie_clapper_svgrepo_com"
                tools:ignore="ImageContrastCheck" />

            <TextView
                android:id="@+id/travel_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="160dp"
                android:layout_marginTop="350dp"
                android:text="@string/travel"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/travel_textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="160dp"
                android:layout_marginTop="380dp"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:text="@string/travel1" />

            <ImageView
                android:id="@+id/travel_imageView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="355dp"
                android:contentDescription="@string/photo"
                app:srcCompat="@drawable/ic_travel_svgrepo_com"
                tools:ignore="ImageContrastCheck" />

            <TextView
                android:id="@+id/learn_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="160dp"
                android:layout_marginTop="520dp"
                android:textSize="20sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@color/black"
                android:text="@string/learn" />

            <TextView
                android:id="@+id/learn_textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="160dp"
                android:layout_marginTop="550dp"
                android:text="@string/learn1"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/hobbie"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_marginTop="520dp"
                android:contentDescription="@string/photo"
                app:srcCompat="@drawable/ic_teacher_learn_understand_human_svgrepo_com"
                tools:ignore="ImageContrastCheck" />


            <TextView
                android:id="@+id/cr_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="700dp"
                android:gravity="center"
                android:paddingTop="50dp"
                android:text="@string/cr"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/android_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="12sp"
                android:paddingTop="5dp"
                android:layout_marginTop="770dp"
                android:layout_marginBottom="20dp"
                android:text="@string/android" />




        </RelativeLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"

        >
        <View
            android:id="@+id/down_divider4"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="?android:attr/listDivider" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <Button
            android:id="@+id/back_button4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="30dp"
            android:backgroundTint="@color/white"
            android:drawableTop="@drawable/ic_action_undo_svgrepo_com"
            android:text="@string/skill"
            android:textColor="@color/black"
            android:textSize="11sp"
            style="?android:attr/buttonBarButtonStyle"/>

        <Button
            android:id="@+id/home_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="5dp"
            android:backgroundTint="@color/white"
            android:drawableTop="@drawable/ic_home_svgrepo_com"
            tools:ignore="SpeakableTextPresentCheck"
            style="?android:attr/buttonBarButtonStyle"/>



        <Button
            android:id="@+id/next_button4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="5dp"
            android:backgroundTint="@color/white"
            android:drawableTop="@drawable/ic_action_redo_svgrepo_com"
            android:text="@string/achi"
            android:textColor="@color/black"
            android:textSize="11sp"
            style="?android:attr/buttonBarButtonStyle"/>

    </LinearLayout>
</LinearLayout>


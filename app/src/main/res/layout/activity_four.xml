<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FourthActivity"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:gravity="end"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >

        <Button
            android:id="@+id/education_Button"
            android:layout_width="94dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:drawableTop="@drawable/ic_graduation_svgrepo_com"
            android:text="@string/education"
            android:backgroundTint="@color/white"
            android:textSize="9dp"
            android:textColor="@color/black"
            />


        <Button
            android:id="@+id/skill_Button"
            android:layout_width="94dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:backgroundTint="@color/white"
            android:drawableTop="@drawable/ic_settings_svgrepo_com"
            android:text="@string/skill"
            android:textColor="@color/black"
            android:textSize="9dp" />

        <Button
            android:id="@+id/hobbies_Button"
            android:layout_width="94dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:drawableTop="@drawable/ic_puzzle_svgrepo_com"
            android:text="@string/hobbies"
            android:backgroundTint="@color/white"
            android:textSize="9dp"
            android:textColor="@color/black"
            />

        <Button
            android:id="@+id/achi_Button"
            android:layout_width="94dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:drawableTop="@drawable/ic_badge_svgrepo_com"
            android:text="@string/achi"
            android:backgroundTint="@color/white"
            android:textSize="9dp"
            android:textColor="@color/black"
            />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:contentDescription="@string/app_name"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp " >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/name_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="25sp"
                android:textColor="@color/purple_500"
                android:text="@string/janaina" />



            <TextView
                android:id="@+id/cr_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="16sp"
                android:paddingTop="50dp"
                android:layout_marginStart="35dp"
                android:text="@string/cr" />

            <TextView
                android:id="@+id/android_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="16sp"
                android:paddingTop="5dp"
                android:layout_marginStart="35dp"
                android:text="@string/android" />


        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:id="@+id/relative_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        tools:ignore="MissingConstraints">


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="54dp"
            android:layout_toStartOf="@+id/close_button"
            android:backgroundTint="@color/white"
            android:contentDescription="@string/back"
            android:src="@drawable/ic_action_undo_svgrepo_com"
            app:tint="#000000" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/close_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="54dp"
            android:backgroundTint="@color/white"
            android:contentDescription="@string/close"
            android:layout_toStartOf="@+id/next_button"
            android:src="@drawable/actions_close_simple_svgrepo_com"
            app:tint="#000000" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/next_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/white"
            android:contentDescription="@string/next"
            android:src="@drawable/action_redo_com"
            app:tint="#000000" />

    </RelativeLayout>
</LinearLayout>
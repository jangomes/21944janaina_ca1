<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SecondaryActivity"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:gravity="end"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/black"
        >

        <Button
            android:id="@+id/ed_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/ic_small_graduation_svgrepo_com"
            android:backgroundTint="@color/black"
            android:drawableTint="@color/white"
            tools:ignore="SpeakableTextPresentCheck"
            />

        <TextView
            android:id="@+id/home_textView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:text="@string/education" />


        <Button
            android:id="@+id/closebutton"
            android:layout_width="94dp"
            android:layout_height="50dp"
            android:layout_marginStart="140dp"
            android:backgroundTint="@color/black"
            android:drawableTop="@drawable/ic_actions_close_svgrepo_com"
            android:drawableTint="@color/white"
            android:shadowColor="@color/white"
            app:iconTint="@color/white"
            tools:ignore="SpeakableTextPresentCheck" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/education_Button2"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:layout_marginEnd="5dp"
            android:drawableTop="@drawable/ic_graduation_svgrepo_com"
            android:backgroundTint="@color/white"
            tools:ignore="SpeakableTextPresentCheck"
            />


        <Button
            android:id="@+id/skill_Button2"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:layout_marginEnd="5dp"
            android:drawableTop="@drawable/ic_settings_svgrepo_com"
            android:backgroundTint="@color/white"
            tools:ignore="SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/hobbies_Button2"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:layout_marginEnd="5dp"
            android:drawableTop="@drawable/ic_puzzle_svgrepo_com"
            android:backgroundTint="@color/white"
            tools:ignore="SpeakableTextPresentCheck"
            />

        <Button
            android:id="@+id/achi_Button2"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:layout_marginEnd="5dp"
            android:drawableTop="@drawable/ic_badge_svgrepo_com"
            android:backgroundTint="@color/white"
            tools:ignore="SpeakableTextPresentCheck"
            />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:contentDescription="@string/app_name"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp " >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/introeducation_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="25sp"
                android:textColor="@color/black"
                android:text="@string/education" />

            <ImageView
                android:id="@+id/learn"
                android:layout_width="400dp"
                android:layout_height="300dp"
                android:contentDescription="@string/photo"
                app:srcCompat="@drawable/photo_1488190211105_8b0e65b80b4e"
                tools:ignore="ImageContrastCheck" />

            <TextView
                android:id="@+id/couse1_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="15dp"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:text="@string/course1" />

            <TextView
                android:id="@+id/dorset_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginEnd="35dp"
                android:text="@string/dorset" />

            <TextView
                android:id="@+id/startdorset_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginEnd="35dp"
                android:text="@string/startdorset" />

                <ImageView
                android:id="@+id/dorset"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginEnd="250dp"
                android:contentDescription="@string/photo"
                app:srcCompat="@drawable/logo_website"
                tools:ignore="ImageContrastCheck" />



            <TextView
                android:id="@+id/couse2_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="15dp"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:text="@string/course2" />

            <TextView
                android:id="@+id/unip_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginEnd="35dp"
                android:text="@string/unip" />

            <TextView
                android:id="@+id/startunip_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginEnd="35dp"
                android:text="@string/startunip" />

            <ImageView
                android:id="@+id/unip"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginEnd="250dp"
                android:contentDescription="@string/photo"
                app:srcCompat="@drawable/logo_unip_png_1"
                tools:ignore="ImageContrastCheck" />






            <TextView
                android:id="@+id/cr_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="16sp"
                android:paddingTop="50dp"
                android:text="@string/cr" />

            <TextView
                android:id="@+id/android_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="16sp"
                android:paddingTop="5dp"
                android:text="@string/android" />


        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/back_button"
            android:layout_width="94dp"
            android:layout_height="90dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="50dp"
            android:backgroundTint="@color/white"
            android:drawableTop="@drawable/ic_action_undo_svgrepo_com"
            android:text="@string/home"
            android:textColor="@color/black"
            android:textSize="11sp" />

        <Button
            android:id="@+id/home_button"
            android:layout_width="94dp"
            android:layout_height="90dp"
            android:layout_marginEnd="5dp"
            android:backgroundTint="@color/white"
            android:drawableTop="@drawable/ic_home_svgrepo_com"
            tools:ignore="SpeakableTextPresentCheck" />


        <Button
            android:id="@+id/nextButton"
            android:layout_width="94dp"
            android:layout_height="90dp"
            android:layout_marginEnd="5dp"
            android:backgroundTint="@color/white"
            android:drawableTop="@drawable/ic_action_redo_svgrepo_com"
            android:text="@string/skill"
            android:textColor="@color/black"
            android:textSize="11sp"
            />

    </LinearLayout>

</LinearLayout>

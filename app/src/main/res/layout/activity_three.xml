<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ThirdActivity"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="end"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/black"
        >

        <Button
            android:id="@+id/ed_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/ic_small_settings_svgrepo_com"
            android:backgroundTint="@color/black"
            android:drawableTint="@color/white"
            tools:ignore="SpeakableTextPresentCheck"
            />

        <TextView
            android:id="@+id/home_textView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:text="@string/skill" />


        <Button
            android:id="@+id/closebutton"
            android:layout_width="94dp"
            android:layout_height="50dp"
            android:layout_marginStart="170dp"
            android:backgroundTint="@color/black"
            android:drawableTop="@drawable/ic_actions_close_svgrepo_com"
            android:drawableTint="@color/white"
            android:shadowColor="@color/white"
            app:iconTint="@color/white"
            tools:ignore="SpeakableTextPresentCheck" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >

        <Button
            android:id="@+id/education_Button3"
            android:layout_width="95dp"
            android:layout_height="70dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:drawableTop="@drawable/ic_graduation_svgrepo_com"
            android:backgroundTint="@color/white"
            tools:ignore="SpeakableTextPresentCheck"
            style="?android:attr/buttonBarButtonStyle"
            />


        <Button
            android:id="@+id/skill_Button3"
            android:layout_width="95dp"
            android:layout_height="70dp"
            android:layout_marginEnd="5dp"
            android:drawableTop="@drawable/ic_settings_svgrepo_com"
            android:backgroundTint="@color/white"
            tools:ignore="SpeakableTextPresentCheck"
            style="?android:attr/buttonBarButtonStyle"/>

        <Button
            android:id="@+id/hobbies_Button3"
            android:layout_width="95dp"
            android:layout_height="70dp"
            android:layout_marginEnd="5dp"
            android:drawableTop="@drawable/ic_puzzle_svgrepo_com"
            android:backgroundTint="@color/white"
            tools:ignore="SpeakableTextPresentCheck"
            style="?android:attr/buttonBarButtonStyle"
            />

        <Button
            android:id="@+id/achi_Button3"
            android:layout_width="95dp"
            android:layout_height="70dp"
            android:layout_marginEnd="5dp"
            android:drawableTop="@drawable/ic_badge_svgrepo_com"
            android:backgroundTint="@color/white"
            tools:ignore="SpeakableTextPresentCheck"
            style="?android:attr/buttonBarButtonStyle"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"

        >
        <View
            android:id="@+id/up_divider3"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="?android:attr/listDivider" />


    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:padding="10dp"
        android:orientation="vertical"
        android:contentDescription="@string/app_name"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp " >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/skill_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/skill"
                android:textColor="@color/black"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="25sp" />

            <ImageView
                android:id="@+id/knowledge_imageView"
                android:layout_width="400dp"
                android:layout_height="300dp"
                android:layout_marginTop="20dp"
                android:contentDescription="@string/photo"
                app:srcCompat="@drawable/luca_bravo_xjxwbfso2f0_unsplash"
                tools:ignore="ImageContrastCheck" />

            <TextView
                android:id="@+id/knowledge_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="320dp"
                android:gravity="center"
                android:text="@string/knowledge"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@color/black"
                android:textSize="25sp" />

            <ImageView
                android:id="@+id/kotlin_imageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="380dp"
                android:contentDescription="@string/photo"
                app:srcCompat="@drawable/ic_androidstudio_svgrepo_com"
                tools:ignore="ImageContrastCheck" />


            <TextView
                android:id="@+id/kotlin_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="480dp"
                android:text="@string/kotlin"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/c_imageView"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_marginStart="145dp"
                android:layout_marginTop="390dp"
                android:contentDescription="@string/photo"
                app:srcCompat="@drawable/ic_c_sharp_svgrepo_com"
                tools:ignore="ImageContrastCheck" />

            <TextView
                android:id="@+id/c_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="175dp"
                android:layout_marginTop="480dp"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:text="@string/c" />


            <ImageView
                android:id="@+id/figma_imageView"
                android:layout_width="130dp"
                android:layout_height="95dp"
                android:layout_marginTop="390dp"
                android:layout_marginStart="255dp"
                android:contentDescription="@string/photo"
                app:srcCompat="@drawable/ic_figma_svgrepo_com"
                tools:ignore="ImageContrastCheck" />

            <TextView
                android:id="@+id/figma_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="295dp"
                android:layout_marginTop="480dp"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:text="@string/figma" />

            <ImageView
                android:id="@+id/html_imageView"
                android:layout_width="130dp"
                android:layout_height="95dp"
                android:layout_marginStart="-5dp"
                android:layout_marginTop="530dp"
                android:contentDescription="@string/photo"
                app:srcCompat="@drawable/ic_html_fill_svgrepo_com"
                tools:ignore="ImageContrastCheck" />

            <TextView
                android:id="@+id/html_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="630dp"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:text="@string/html" />

            <ImageView
                android:id="@+id/css_imageView"
                android:layout_width="130dp"
                android:layout_height="95dp"
                android:layout_marginStart="125dp"
                android:layout_marginTop="530dp"
                android:contentDescription="@string/photo"
                app:srcCompat="@drawable/ic_css_fill_svgrepo_com"
                tools:ignore="ImageContrastCheck" />

            <TextView
                android:id="@+id/css_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="175dp"
                android:layout_marginTop="630dp"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:text="@string/css" />


            <ImageView
                android:id="@+id/sql_imageView"
                android:layout_width="130dp"
                android:layout_height="95dp"
                android:layout_marginStart="255dp"
                android:layout_marginTop="530dp"
                android:contentDescription="@string/photo"
                app:srcCompat="@drawable/ic_mysql_svgrepo_com"
                tools:ignore="ImageContrastCheck" />


            <TextView
                android:id="@+id/sql_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="295dp"
                android:layout_marginTop="630dp"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:text="@string/sql" />


            <TextView
                android:id="@+id/cr_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="670dp"
                android:gravity="center"
                android:background="@drawable/_6906b68d2a52712a832657c52de4815_divisor_de_linha_de_borda_ornamentado"
                android:paddingTop="10dp"
                android:text="@string/cr"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/android_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="710dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:paddingTop="30dp"
                android:text="@string/android"
                android:textSize="12sp" />


        </RelativeLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"

        >
        <View
            android:id="@+id/down_divider3"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="?android:attr/listDivider" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <Button
            android:id="@+id/back_button3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="5dp"
            android:backgroundTint="@color/white"
            android:drawableTop="@drawable/ic_action_undo_svgrepo_com"
            android:text="@string/education"
            android:textColor="@color/black"
            android:textSize="11sp"
            style="?android:attr/buttonBarButtonStyle"/>

        <Button
            android:id="@+id/home_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="5dp"
            android:backgroundTint="@color/white"
            android:drawableTop="@drawable/ic_home_svgrepo_com"
            tools:ignore="SpeakableTextPresentCheck"
            style="?android:attr/buttonBarButtonStyle"/>


        <Button
            android:id="@+id/next_button3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="5dp"
            android:backgroundTint="@color/white"
            android:drawableTop="@drawable/ic_action_redo_svgrepo_com"
            android:text="@string/hobbies"
            android:textColor="@color/black"
            android:textSize="11sp"
            style="?android:attr/buttonBarButtonStyle"/>

    </LinearLayout>
</LinearLayout>
